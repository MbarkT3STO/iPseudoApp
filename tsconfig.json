{
  "compilerOptions": {
    "target": "ES2020",
    "module": "none",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*"
  ]
}
